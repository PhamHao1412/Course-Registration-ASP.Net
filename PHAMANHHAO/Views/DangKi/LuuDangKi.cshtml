@model IEnumerable<PHAMANHHAO.Models.Hocphan>

@{
    ViewBag.Title = "LuuDangKi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>LuuDangKi</h2>

<<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.MaHP)</th>
        <th>@Html.DisplayNameFor(model => model.TenHP)</th>
        <th>@Html.DisplayNameFor(model => model.SoTC)</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.MaHP)</td>

            <td>@Html.DisplayFor(modelItem => item.TenHP)</td>
            <td>@Html.DisplayFor(modelItem => item.SoTC)</td>

            <td>
                @Html.ActionLink("Xóa", "XoaGiohang", new { @id = item.MaHP })
            </td>


        </tr>

    }
    <tr style="font-weight:bold;text-align:right;color:red">
    <tr style="font-weight:bold; text-align:left; color:red">
        <td colspan="2">Số học phần: @ViewBag.SoHocPhan</td>

    </tr>
    <tr style="font-weight:bold; text-align:left; color:red">
        <td colspan="2">Tổng số tín chỉ: @ViewBag.TongSoTinChi</td>
    </tr>
</table>

@using PHAMANHHAO.Models
<h2 style="text-align:center">Thông tin đặt hàng</h2>
@{
    PHAMANHHAO.Scripts.SinhVien sv = (PHAMANHHAO.Scripts.SinhVien)Session["SinhVien"];
}
<table align="center">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Mã số sinh viên:</td>
            <td style="font-weight:bold">@sv.MaSV</td>
        </tr>
        <tr style="height:40px">
            <td>Họ tên:</td>
            <td style="font-weight:bold">@sv.HoTen</td>
        </tr>
        <tr style="height:40px">
            <td> Ngày sinh:</td>
            <td style="font-weight:bold">@sv.NgaySinh</td>
        </tr>
        <tr style="height:40px">
            <td>Ngành học:</td>
            <td style="font-weight:bold">@sv.MaNganh</td>
        </tr>
        <tr style="height:40px">
            <td>Ngày Đăng ký:</td>
            <td style="font-weight:bold"><input type="date" name="NgayDangKy" /></td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td style="font-weight:bold"><input type="submit" value="Xác nhận" class="btn btn-success" /></td>
        </tr>
    }
</table>
 